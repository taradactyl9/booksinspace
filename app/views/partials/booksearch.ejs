<div class="row">
    <div class="col-12 results">
        <div class="card-layouts">

            <% if (bookData) { %>
                <% bookData.forEach(function(item){ %>
                    <div class="card-container">
                        <h5>
                            <%= item.title %><br>
                            <%= item.authors %><br>
                        </h5>
                        <% if (item.image == "N/A") { %>
                            <form action="/addbook" METHOD="GET">
                                <img src="img/movie-poster.png" alt="<%= item.title %>" width="200" height="248" />
                            
                                <label for="title"><input id="<%= item.title %>" type="text" name="<% item.title %>"></label>

                                <button type="submit" class="btn btn-primary register-btn">
                                    poo
                                </button>
                            </form> 

                            <% } else { %>
                                <form action="/addbook" METHOD="GET">
                                    <img src="<%= item.image %>" alt="<%= item.image %>" width="200" height="248" />

                                    <input type="hidden" name="title" value="<%= item.title %>">

                                    <input type="hidden" name="authors" value="<%= item.authors %>">

                                    <input type="hidden" name="image" value="<%= item.image %>">

                                    <button type="submit" class="btn btn-primary register-btn">My Books
                                        <!--<a class="nav-link" href="#">
                                            My Books
                                        </a>-->
                                    </button>
                                </form>
                            <% } %>

                    </div>
                    <% }) %>

                        <% } else { %>
                            <p>Search for a book!</p>
                            <% } %>

        </div>
    </div>
</div>