<div class="jumbotron">
    <h1 class="display-3 text-dark">Welcome!</h1>
    <p class="lead text-dark">Books In Space! Your complete library for storing and managing your books!.</p>
    <hr class="my-4 text-light">
    <p class="text-dark">Create your account and share away!</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
    </p>
</div>

<blockquote class="blockquote">
    <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
    <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
</blockquote>

<div class="row">
    <div class="col-12 results">
        <div class="card-layouts">

            <% if (bookData) { %>
                <% bookData.forEach(function(item){ %>
                    <div class="card-container">
                        <h5>
                            <%= item.title %>
                        </h5>
                        <% if (item.image == "N/A") { %>
                            <img src="img/movie-poster.png" alt="<%= item.title %>" width="200" height="248" />

                            <input id="movie-saved" type="checkbox" name="movie-saved" value="<% item.title %>" onclick="save()"><label for="<% item.Title %>">Save to book shelf</label>

                            <% } else { %>
                                <img src="<%= item.image %>" alt="<%= item.image %>" width="200" height="248" />

                                <input id="movie-saved" type="checkbox" name="movie-saved" value="<% item.title %>" onclick="save()"><label for="<% item.title %>">Save to book shelf</label>
                                <% } %>
                    </div>
                    <% }) %>

                        <% } else { %>
                            <p>Search for a book!</p>
                            <% } %>

        </div>
    </div>
</div>